<div class="row justify-content-center mt-4">
  <div class="col-lg-8 sm-8 bg-white rounded shadow-sm p-5">
    <h1>New game</h1>
    <div class="letter-array">
      <% @letters.each do |letter| %>
        <div class="letter-box"><%= letter.capitalize %></div>
      <% end %>
    </div>

    <div class="playing-field">
      <form action="score" method="post" data-turbo="false">
          <label for="exampleFormControlInput1">What's the longest word that you can play?</label>
          <input class="form-control" type="text" name="word" value="">
          <%= hidden_field_tag :letters, @letters.join()%>
          <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
          <input class="btn btn-primary mb-3" id="askbtn" type="submit" value="Play!">
      </form>
    </div>
  </div>
</div>
